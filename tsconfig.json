{
  "extends": "expo/tsconfig.base",

  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "src": ["src"],
      "@utils": ["./utils"],
      "@hooks": ["./hooks"],
      "@store": ["./store"],
      "@actions": ["./store/actions"],
      "@reducers": ["./store/reducers"],
      "@types": ["./store/types"],
      "@screens": ["src/screens"],
      "@assets": ["./assets"],
      "@styles": ["./styles"],
      "@components": ["src/components"],
      "@constants": ["./constants"],
      "@routes": ["./navigation"],
      "@layouts": ["./layouts"]
    }
  },
  "include": ["./**/*.tsx","./**/*.ts"],
  "exclude": ["node_modules","babel.config.js"]
}
